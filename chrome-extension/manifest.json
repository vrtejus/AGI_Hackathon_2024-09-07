{
  "manifest_version": 3,
  "name": "React Chrome Extension",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "https://mail.google.com/*",
    "https://*.slack.com/*",
    "https://www.primevideo.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://*.slack.com/*",
        "https://www.primevideo.com/*",
        "https://drive.google.com/*"
      ],
      "js": ["js/content.js"]
    }
  ],
  "action": {
    "default_popup": "js/index.html",
    "default_title": "React Chrome Extension"
  }
}
